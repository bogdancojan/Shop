<%= stylesheet_link_tag "products_index"%>

<div class="row row-cols-1 row-cols-md-4 g-4">
  <% @products.each do |product| %>
    <div class="col">
      <a href="<%= product_path(product) %>" style="text-decoration: none;color: darkolivegreen;">
        <div class="card" style="width: 15rem;border-radius: 16px;margin: auto;">
          <img src="<%= product.photo_url %>" class="card-img-top" alt="product-image" style="border-radius: 16px 16px 0 0;">
          <div class="card-body" style="text-align: center;">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= number_with_delimiter(product.price, :delimiter => ',') %> RON</p>
          </div>
        </div>
      </a>
    </div>
  <% end %>
</div>
